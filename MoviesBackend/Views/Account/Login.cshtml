
@{
  ViewData["Title"] = "Login";
  Layout = "~/Views/_Layout.cshtml";
}

<h2>Login</h2>

<form method="POST">
  <div>
    <label>Email</label>
    <input type="email" name="email" />
  </div>

  <div>
    <label>Password</label>
    <input type="password" name="password" />
  </div>

  <input type="submit" />
</form>

<div asp-validation-summary="All"></div>


